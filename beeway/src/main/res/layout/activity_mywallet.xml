<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/t1"
        layout="@layout/head_2" />

    <RelativeLayout
        android:id="@+id/myWallet_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/t1"
        android:background="@color/bg_gray"
        android:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_gray"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/beeway_title_bule">

                    <TextView
                        android:id="@+id/myWallet_t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/wallet_usefee"
                        android:drawablePadding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:text="当前余额"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_middle" />

                    <TextView
                        android:id="@+id/myWallet_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/myWallet_t1"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:text="0.00元"
                        android:textColor="@color/white"
                        android:textSize="@dimen/number_size_big" />

                    <TextView
                        android:id="@+id/myWallet_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/myWallet_balance"
                        android:layout_marginTop="30dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="20dp"
                        android:text="关于余额>>"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_middle" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/myWallet_applyFor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:background="@color/bg_gray"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已众筹"
                            android:textSize="@dimen/font_size_middle" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/myWallet_already"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/beeway_title_bule"
                                android:textSize="@dimen/font_size_middle" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="元"
                                android:textSize="@dimen/font_size_middle" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="申请提取"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/font_size_normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/myWallet_details"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/bg_gray"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingLeft="2dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已购买蜂友宝"
                            android:textSize="@dimen/font_size_middle" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/myWallet_part"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/beeway_title_bule"
                                android:textSize="@dimen/font_size_middle" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="份"
                                android:textSize="@dimen/font_size_middle" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="了解详情"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/font_size_normal" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:padding="10dp"
                        android:text="收支明细"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_large" />

                    <TextView
                        android:id="@+id/myWallet_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                        android:text="更多>>"
                        android:textColor="@color/beeway_title_bule"
                        android:textSize="@dimen/font_size_small" />
                </RelativeLayout>

                <ListView
                    android:id="@+id/myWallet_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg_gray"
                    android:divider="@null"
                    android:focusable="false"
                    android:focusableInTouchMode="false"></ListView>

                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="35dp" />-->

                <ImageView
                    android:id="@+id/activity_mytrack_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/nullpage"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/myWallet_topUp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="充值"
                android:textColor="@color/beeway_title_bule"

                />

            <TextView
                android:id="@+id/myWallet_withdraw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="提现"
                android:textColor="@color/beeway_title_bule" />

            <TextView
                android:id="@+id/myWallet_bankCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="银行卡"
                android:textColor="@color/beeway_title_bule"

                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bankCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:background="@color/bg_gray"
        android:orientation="vertical"
        android:visibility="gone">

        <com.thvc.beeway.view.SildeDelListvew
            android:id="@+id/bankCard_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:background="@color/bg_gray"
            android:divider="#00000000"
            android:focusable="false"
            android:focusableInTouchMode="false"></com.thvc.beeway.view.SildeDelListvew>

        <RelativeLayout
            android:id="@+id/bankCard_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/bankCard_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="添加银行卡"
                android:textColor="@color/beeway_title_bule"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/iconfont_jiantou" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_bankCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/bankCard_bankname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="开户行名称"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_middle" />

            <TextView
                android:id="@+id/bankCard_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="2"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="请选择您的开户行名称" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="0.2"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/iconfont_jiantou" />

        </LinearLayout>

        <ImageView style="@style/darkgray_line" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="户主"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_middle" />

            <EditText
                android:id="@+id/bankCard_owners"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="2.2"
                android:background="@null"
                android:hint="请输入户主"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="卡号(账户)"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_middle" />

            <EditText
                android:id="@+id/bankCard_cardNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="2.2"
                android:background="@null"
                android:hint="请输入您的卡号(支付宝账号)"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView style="@style/darkgray_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="备注"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_middle" />

            <EditText
                android:id="@+id/bankCard_remark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="2.2"
                android:background="@null"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/yesOrNo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/background_view_rounded_while"
        android:visibility="gone">

        <TextView
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:text="取消"
            android:textColor="@color/beeway_title_bule"
            android:textSize="@dimen/font_size_middle" />

        <TextView
            android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="4dp"
            android:text="完成"
            android:textColor="@color/beeway_title_bule"
            android:textSize="@dimen/font_size_middle" />

        <RelativeLayout
            android:id="@+id/rootview"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_below="@+id/no"
            android:layout_centerInParent="true"
            android:visibility="visible">

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
