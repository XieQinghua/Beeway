<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">


    <com.thvc.beeway.view.CircleImageView
        android:id="@+id/iv_friend_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:src="@drawable/head_portraits" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/rl_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提拉米苏"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_middle" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="附近583m"
                android:textSize="@dimen/font_size_normal" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_user_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_layout"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_user_sex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/corner_view_left"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:text="男"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_middle" />

            <TextView
                android:id="@+id/tv_user_rank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_user_sex"
                android:layout_weight="7"
                android:alpha="0.7"
                android:background="@drawable/corner_view_right"
                android:paddingLeft="4dp"
                android:paddingRight="8dp"
                android:text="大黄蜂"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_middle" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_user_rank"
            android:layout_marginTop="10dp"
            android:text="人生就像一场戏"
            android:textSize="@dimen/font_size_middle" />
    </RelativeLayout>
</LinearLayout>

