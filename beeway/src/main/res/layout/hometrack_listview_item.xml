<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/hometrack_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="吃货"
            android:padding="5dp"
            android:textSize="@dimen/font_size_middle"
            android:textColor="@color/beeway_title_bule"
            />
        <TextView
            android:id="@+id/hometrack_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多>>"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/beeway_title_bule"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/hometrack_layout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:paddingBottom="3dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hometrack_ImageView"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:src="@drawable/imgurl" />

            <com.thvc.beeway.view.CircleImageView
                android:id="@+id/hometrack_headpic"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="95dp"
                android:src="@drawable/head_portraits"
                app:border_color="@color/white"
                app:border_width="2dp" />

            <TextView
                android:id="@+id/hometrack_realname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hometrack_headpic"
                android:layout_centerHorizontal="true"
                android:paddingTop="3dp"
                android:text="紫萱"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_middle" />

            <TextView
                android:id="@+id/hometrack_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hometrack_realname"
                android:layout_centerHorizontal="true"
                android:paddingTop="3dp"
                android:text="紫萱"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/font_size_normal"
                 />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/hometrack_layout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:paddingBottom="3dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hometrack_ImageView2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:src="@drawable/imgurl" />

            <com.thvc.beeway.view.CircleImageView
                android:id="@+id/hometrack_headpic2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="95dp"
                android:src="@drawable/head_portraits"
                app:border_color="@color/white"
                app:border_width="2dp" />

            <TextView
                android:id="@+id/hometrack_realname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hometrack_headpic2"
                android:layout_centerHorizontal="true"
                android:paddingTop="3dp"
                android:text="紫萱"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_middle" />

            <TextView
                android:id="@+id/hometrack_top2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hometrack_realname2"
                android:layout_centerHorizontal="true"
                android:paddingTop="3dp"
                android:text="紫萱"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/font_size_normal"
                 />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
