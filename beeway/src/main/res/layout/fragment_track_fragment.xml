<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/t1"
        layout="@layout/head" />

    <LinearLayout
        android:id="@+id/track_fragment_linearlayter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/track_fragment_linearlayout_text"
            android:layout_width="match_parent"
            android:layout_height="49.0dp"
            android:background="@color/beeway_title_bule"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/track_fragment_textview1"
                style="@style/beeway_white_text"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingTop="15dp"
                android:text="推荐" />

            <TextView
                android:id="@+id/track_fragment_textview2"
                style="@style/beeway_white_text"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingTop="15dp"
                android:text="游记" />

            <TextView
                android:id="@+id/track_fragment_textview3"
                style="@style/beeway_white_text"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingTop="15dp"
                android:text="蜂蜜" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/track_fragment_linearlayout_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/dodgerblue"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/track_fragment_view1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/white"
                android:paddingLeft="15dp" />

            <TextView
                android:id="@+id/track_fragment_view2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingLeft="15dp" />

            <TextView
                android:id="@+id/track_fragment_view3"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingLeft="15dp" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/track_fragment_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v4.view.ViewPager>
    </LinearLayout>

</LinearLayout>
