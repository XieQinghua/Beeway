<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.thvc.beeway.view.CircleImageView
        android:id="@+id/collect_user_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/head_portraits"
        app:border_color="@color/white"
        android:layout_margin="7dp"
        app:border_width="1dp" />
    <LinearLayout
        android:id="@+id/collect_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:paddingBottom="5dp"
        android:layout_toRightOf="@+id/collect_user_img"
        android:orientation="vertical">
        <TextView
            android:id="@+id/collect_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生秘书"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_middle"
            />
        <TextView
            android:id="@+id/collect_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="生秘书"
            android:textSize="@dimen/font_size_small"
            />
        <ImageView
            android:id="@+id/collect_fileurl"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_marginTop="3dp"
            android:src="@drawable/imgurl"
            />
        <TextView
            android:id="@+id/collect_addtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="生秘书"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/font_size_small"
            />
    </LinearLayout>
</RelativeLayout>
