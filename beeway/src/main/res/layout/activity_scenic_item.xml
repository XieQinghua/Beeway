<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/tv_scenic_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_scenic_name"
            style="@style/beeway_black_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="铜官镇"
            android:textColor="@color/black" />


        <RatingBar
            android:id="@+id/tv_scenic_rating"
            style="@style/MyRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:isIndicator="true" />

        <TextView
            android:id="@+id/tv_scenic_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="地址：湖南省长沙市望城县"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/tv_scenic_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:lines="2"
            android:text="简介：除了欣赏遗址，景区里面有许多的陶器作坊，你可以看到师傅现场烧制陶器的过程，可以花钱去尝试一下拉胚。"
            android:textSize="@dimen/font_size_small" />
    </LinearLayout>
    <!--灰色分隔线-->
    <ImageView style="@style/darkgray_line" />
</LinearLayout>
