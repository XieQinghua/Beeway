<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_label1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null">

            <TextView
                android:id="@+id/tv_label_chihuo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_label_meishi"
                android:gravity="center"
                android:text="吃货"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/tv_label_jingse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_label_jingse"
                android:gravity="center"
                android:text="风景"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_label_gouwu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_label_gouwu"
                android:gravity="center"
                android:text="购物"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_label3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_label1"
            android:layout_marginTop="20dp"
            android:background="@null">

            <TextView
                android:id="@+id/tv_label_yueban"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/aboutwith"
                android:gravity="center"
                android:text="约伴"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_label_huodong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/campaign"
                android:gravity="center"
                android:text="活动"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_label_tucao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_label_tucao"
                android:gravity="center"
                android:text="吐槽"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_label2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_label1"
            android:layout_marginTop="20dp"
            android:background="@null">

            <TextView
                android:id="@+id/tv_label_sheying"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/photography"
                android:gravity="center"
                android:text="摄影"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_label_gankai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_label_gankai"
                android:gravity="center"
                android:text="感慨"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_label_qita"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_label_qita"
                android:gravity="center"
                android:text="其他"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_label_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:text="取消"
        android:textColor="@color/white" />
</RelativeLayout>
